---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getTranslations } from "../../i18n";

const lang = "en";
const t = getTranslations(lang);
---

<BaseLayout
  title={t.notFound.title}
  description={t.notFound.message}
  lang={lang}
>
  <div class="not-found">
    <div class="not-found-content">
      <div class="error-code-wrapper">
        <span class="error-code">4</span>
        <span class="error-code-zero">0</span>
        <span class="error-code">4</span>
      </div>
      <h1 class="error-title">Page not found</h1>
      <p class="error-message">{t.notFound.message}</p>
      <a href="/en" class="home-link">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M19 12H5M12 19l-7-7 7-7"></path>
        </svg>
        <span>{t.notFound.backHome}</span>
      </a>
    </div>
  </div>
</BaseLayout>

<style>
  .not-found {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    text-align: center;
    padding: var(--space-2xl);
    background: var(--bg-primary);
    position: relative;
    overflow: hidden;
  }

  .not-found::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, var(--accent-primary-light) 0%, transparent 70%);
    pointer-events: none;
    opacity: 0.6;
  }

  .not-found-content {
    max-width: 520px;
    position: relative;
    z-index: 1;
  }

  .error-code-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0;
    margin-bottom: var(--space-2xl);
  }

  .error-code {
    font-family: var(--font-display);
    font-size: clamp(6rem, 20vw, 10rem);
    font-weight: 600;
    color: var(--accent-primary);
    line-height: 1;
    letter-spacing: -0.05em;
    text-shadow: 4px 4px 0 var(--accent-primary-light);
  }

  .error-code-zero {
    font-family: var(--font-display);
    font-size: clamp(6rem, 20vw, 10rem);
    font-weight: 300;
    color: var(--border-medium);
    line-height: 1;
    letter-spacing: -0.05em;
    position: relative;
  }

  .error-code-zero::after {
    content: '';
    position: absolute;
    inset: 15%;
    border: 3px dashed var(--border-light);
    border-radius: 50%;
  }

  .error-title {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 4vw, 2.25rem);
    font-weight: 500;
    color: var(--text-primary);
    margin-bottom: var(--space-md);
    letter-spacing: -0.02em;
  }

  .error-message {
    font-size: 1.0625rem;
    color: var(--text-secondary);
    margin-bottom: var(--space-2xl);
    line-height: 1.7;
  }

  .home-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    color: white;
    font-weight: 500;
    font-size: 0.9375rem;
    padding: var(--space-md) var(--space-xl);
    background: var(--accent-primary);
    border: none;
    border-radius: var(--radius-lg);
    transition: all var(--transition-fast);
    box-shadow: 0 4px 14px rgba(196, 93, 58, 0.3);
  }

  .home-link:hover {
    background: var(--accent-primary-hover);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(196, 93, 58, 0.4);
  }

  .home-link svg {
    transition: transform var(--transition-fast);
  }

  .home-link:hover svg {
    transform: translateX(-4px);
  }

  @media (max-width: 480px) {
    .error-code,
    .error-code-zero {
      font-size: 5rem;
    }
  }
</style>
